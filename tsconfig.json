{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "lib": ["esnext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "types": ["typescript-to-lua/language-extensions", "lua-types/jit", "./types/plenary"],
        "outDir": "lua",
        "baseUrl": "./src",
        "rootDir": "./src"
    },
    "tstl": {
        "noImplicitSelf": true,
        "luaTarget": "JIT"
    }
}
